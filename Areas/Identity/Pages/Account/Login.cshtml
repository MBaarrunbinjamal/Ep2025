@page
@model LoginModel

@{
    ViewData["Title"] = "Student Login";
}

<style>
    /* Custom styles for login card */
    .login-card {
        border: 3px solid #28a745; /* same green as heading */
        border-radius: 1rem;
    }

        .login-card .card-body {
            padding: 2rem;
        }

        .login-card h2 {
            color: #28a745;
        }

        .login-card a {
            text-decoration: none;
        }

            .login-card a:hover {
                text-decoration: underline;
                color: #198754; /* darker green on hover */
            }
</style>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-lg-5 col-md-7 col-sm-10">
        <div class="card shadow-lg login-card">
            <div class="card-body">

                <!-- Header -->
                <div class="text-center mb-4">
                    <h2 class="fw-bold">Student Login</h2>
                    <p class="text-muted">Access your account to take surveys and participate in environmental activities</p>
                </div>

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <!-- Login Form -->
                <form id="account" method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">Remember Me</label>
                    </div>

                    <button type="submit" class="btn btn-success w-100 py-2 rounded-pill mb-3">Log In</button>

                    <div class="text-center">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>

                <!-- External Logins -->
                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="mt-4">
                        <h5 class="text-center">Or login with</h5>
                        <div class="d-flex justify-content-center flex-wrap gap-2 mt-2">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <form method="post" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" class="m-0">
                                    <button type="submit" class="btn btn-outline-success" name="provider" value="@provider.Name">
                                        @provider.DisplayName
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
