@model IEnumerable<E_project2025.Models.Survay>

@{
    ViewData["Title"] = "FetchSurveys";
    Layout = "~/Views/Shared/FacultyLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Survey Management</h4>
                <p class="card-description">
                    List of all available and expired surveys.
                </p>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Uploaded On</th>
                                <th>Expiry Date</th>
                                <th>Status</th>
                                <th>Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                bool isExpired = item.ExpiryDate < DateTime.Now;
                                <tr>
                                    <td>@item.Id</td>
                                    <td><span class="fw-bold">@item.Title</span></td>
                                    <td>@item.UploadedOn.ToString("dd MMM yyyy")</td>
                                    <td>@item.ExpiryDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (isExpired)
                                        {
                                            <label class="badge badge-danger">Expired</label>
                                        }
                                        else
                                        {
                                            <label class="badge badge-success">Active</label>
                                        }
                                    </td>
                                    <td>
                                        @if (!isExpired)
                                        {
                                            <a asp-controller="Faculty"
                                               asp-action="FetchfacultyQuestions"
                                               asp-route-surveyId="@item.Id"
                                               class="btn btn-primary btn-sm btn-icon-text">
                                                <i class="ti-file btn-icon-prepend"></i> Answer
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline-secondary btn-sm" disabled>Locked</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>