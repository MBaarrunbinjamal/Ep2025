@{
    ViewData["Title"] = "Home Page";
}

<section class="hero text-center">
    <div class="hero-overlay"></div>
    <div class="container hero-content animate__animated animate__fadeInUp">
        <h1>Saving Nature 🌍<br />One Survey at a Time</h1>
        <p class="mt-3">A smart digital platform for eco-friendly institutes</p>
        <a asp-action="FetchSurveys" asp-controller="Home" class="btn btn-light btn-lg rounded-pill mt-4 px-5 fw-bold">
            Start Survey 🚀
        </a>
    </div>
</section>

<!-- MAIN -->
<div class="container">
    <main class="glass-card">

        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="feature">
                    <i class="bi bi-tree-fill text-success"></i>
                    <h4 class="mt-3">Paperless Campus</h4>
                    <p class="text-muted">No forms, no waste — fully digital surveys.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature">
                    <i class="bi bi-trophy-fill text-warning"></i>
                    <h4 class="mt-3">Rewards & Events</h4>
                    <p class="text-muted">Participate & win eco-friendly prizes.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature">
                    <i class="bi bi-graph-up-arrow text-primary"></i>
                    <h4 class="mt-3">Live Insights</h4>
                    <p class="text-muted">Real-time analytics for faculty.</p>
                </div>
            </div>
        </div>
