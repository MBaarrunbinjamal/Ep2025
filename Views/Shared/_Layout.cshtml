<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcoVibe Portal</title>

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <style>
        :root {
            --green: #1fab89;
            --dark: #0b3d2e;
            --blue: #38bdf8;
            --bg: #f0fdfa;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: radial-gradient(circle at top, #e0fff6, #f0f9ff);
            overflow-x: hidden;
        }

        /* ===== NAVBAR ===== */
        .navbar {
            background: rgba(255,255,255,0.9);
            backdrop-filter: blur(14px);
            border-bottom: 3px solid var(--green);
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.8rem;
            color: var(--dark) !important;
        }

        .nav-link {
            font-weight: 600;
            margin: 0 8px;
        }

        /* ===== HERO ===== */
        .hero {
            min-height: 85vh;
            display: flex;
            align-items: center;
            background: linear-gradient(120deg, rgba(15, 185, 129, 0.9), rgba(56,189,248,0.85)), url('https://images.unsplash.com/photo-1500530855697-b586d89ba3ee') center/cover;
            color: white;
            position: relative;
        }

        .hero-overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.25);
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero h1 {
            font-size: 3.2rem;
            font-weight: 800;
        }

        .hero p {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        /* ===== GLASS CARD ===== */
        .glass-card {
            background: rgba(255,255,255,0.85);
            backdrop-filter: blur(20px);
            border-radius: 30px;
            padding: 50px;
            margin-top: -120px;
            box-shadow: 0 30px 80px rgba(0,0,0,0.15);
        }

        /* ===== FEATURE CARDS ===== */
        .feature {
            border-radius: 25px;
            padding: 35px;
            text-align: center;
            transition: 0.4s;
            background: linear-gradient(145deg, #ffffff, #eafff6);
            height: 100%;
            position: relative;
            overflow: hidden;
        }

            .feature::after {
                content: "";
                position: absolute;
                width: 100%;
                height: 100%;
                background: linear-gradient(120deg, transparent, rgba(31,171,137,0.15), transparent);
                top: -100%;
                left: 0;
                transition: 0.5s;
            }

            .feature:hover::after {
                top: 100%;
            }

            .feature:hover {
                transform: translateY(-15px) scale(1.02);
                box-shadow: 0 20px 50px rgba(0,0,0,0.15);
            }

            .feature i {
                font-size: 3rem;
            }

        /* ===== LOGOUT BUTTON ===== */
        .btn-logout {
            border-radius: 50px;
            font-weight: 600;
            background: #ffecec;
            color: #dc3545;
        }

        /* ===== FOOTER ===== */
        footer {
            background: linear-gradient(135deg, #0b3d2e, #1fab89);
            color: #e6fff7;
            padding: 70px 0 30px;
            margin-top: 150px;
        }
    </style>
</head>

<body>

    <!-- ANNOUNCEMENT -->
    <div class="bg-success text-white text-center py-2 small fw-semibold">
        @if (ViewBag.LatestAwardedSurvey != null)
        {
            <div class="alert alert-warning text-center fw-bold mb-0 animate__animated animate__fadeInDown">
                🏆 Congratulations!
                Your survey
                <strong>@ViewBag.LatestAwardedSurvey.Title</strong>
                has been awarded 🌱
            </div>
        }
    </div>

    <!-- NAV -->
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                🌿 Eco<span class="text-success">Vibe</span>
            </a>

            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="FetchSurveys">Surveys</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a></li>
                                       <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Seminar">Seminars</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="nav-link fw-bold text-success">👋 @User.Identity.Name</span>
                        </li>
                        <li class="nav-item ms-2">
                            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout"
                                  asp-route-returnUrl="@Url.Action("Index", "Home", new { logoutSuccess = "true" })">
                                <button type="button" onclick="confirmLogout()" class="btn btn-logout">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="btn btn-outline-success me-2" href="/Identity/Account/Login">Login</a></li>
                        <li class="nav-item"><a class="btn btn-success rounded-pill px-4" href="/Identity/Account/Register">Join</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- HERO -->
    

            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="text-center">
        <h5 class="fw-bold">🌱 EcoVibe Institute Portal</h5>
        <p class="small mb-1">Smart • Sustainable • Digital</p>
        <small>&copy; 2026 All Rights Reserved</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmLogout() {
            Swal.fire({
                title: 'Logout?',
                text: 'You will need to login again!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#1fab89',
                confirmButtonText: 'Yes, Logout'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('logoutForm').submit();
                }
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
