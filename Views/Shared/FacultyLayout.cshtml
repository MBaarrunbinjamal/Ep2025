<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Faculty Portal | @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/Faculty/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Faculty/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Faculty/assets/css/style.css">

    <style>
        /* --- MINIMALIST RESPONSIVE OVERRIDES --- */
        :root {
            --sidebar-width: 260px;
            --primary-color: #1F3BB3;
        }

        body {
            background-color: #f4f5f7;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        /* Responsive Wrapper */
        .page-body-wrapper {
            display: flex;
            flex-direction: row;
            flex: 1;
            padding-top: 0; /* Removed top bar space */
        }

        /* Sidebar Styling */
        #sidebar {
            width: var(--sidebar-width);
            min-height: 100vh;
            background: #ffffff;
            transition: all 0.3s ease;
            border-right: 1px solid #e0e0e0;
        }

        .nav-link {
            border-radius: 0 20px 20px 0;
            margin-right: 10px;
            padding: 12px 25px !important;
        }

            .nav-link.active {
                background: var(--primary-color) !important;
                color: #fff !important;
            }

        /* Main Content */
        .main-panel {
            flex: 1;
            padding: 25px;
            transition: all 0.3s ease;
        }

        /* Mobile Adjustments */
        media (max-width: 991px) {
            #sidebar {
                position: fixed;
                left: -260px;
                z-index: 1000;
            }

                #sidebar.active {
                    left: 0;
                }

            .main-panel {
                width: 100%;
                padding: 15px;
            }
        }

        /* Custom Mobile Toggle Button */
        .mobile-nav-toggle {
            display: none;
            background: var(--primary-color);
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
        }

        media (max-width: 991px) {
            .mobile-nav-toggle {
                display: block;
            }
        }
    </style>
</head>
<body>

    <div class="container-scroller">
        <div class="page-body-wrapper">

            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <div class="p-4 text-center">
                    <h3 class="fw-bold text-primary">FACULTY</h3>
                    <hr>
                </div>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                           asp-action="Index" asp-controller="Faculty">
                            <i class="mdi mdi-grid-large menu-icon"></i>
                            <span class="menu-title">Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "FetchSurveys" ? "active" : "")"
                           asp-action="FetchSurveys" asp-controller="Faculty">
                            <i class="mdi mdi-clipboard-text menu-icon"></i>
                            <span class="menu-title">Surveys</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="main-panel">
                <button class="mobile-nav-toggle d-lg-none" type="button" onclick="toggleSidebar()">
                    <i class="mdi mdi-menu"></i> Menu
                </button>

                <div class="content-wrapper-p-0">
                    @RenderBody()
                </div>
            </div>

        </div>
    </div>

    <script src="~/Faculty/assets/vendors/js/vendor.bundle.base.js"></script>
    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('active');
        }
    </script>
</body>
</html>