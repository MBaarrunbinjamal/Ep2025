@model E_project2025.Models.Survay

@{
    ViewData["Title"] = "Create Survey";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">
        <div class="card card-body py-3 shadow-none position-relative overflow-hidden mb-4">
            <div class="d-sm-flex align-items-center justify-content-between">
                <div>
                    <h4 class="fw-semibold mb-1">Upload New Survey</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a class="text-muted" href="/Admin/Index">Dashboard</a></li>
                            <li class="breadcrumb-item"><a class="text-muted" href="/Admin/fetchsurvays">Surveys</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Create</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="card-title mb-0 fw-bold text-primary">Survey Details</h5>
                    </div>
                    <div class="card-body p-4">
                        <form id="createsurvay">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="row">
                                <div class="col-12 mb-4">
                                    <label asp-for="Title" class="form-label fw-semibold">Survey Title</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="fa fa-pencil text-primary"></i></span>
                                        <input asp-for="Title" class="form-control border-start-0 ps-0" id="title" placeholder="Enter survey title here..." required />
                                    </div>
                                    <span asp-validation-for="Title" class="text-danger fs-2"></span>
                                </div>

                                <div class="col-md-12 mb-4">
                                    <label asp-for="ExpiryDate" class="form-label fw-semibold">Expiry Date</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="fa fa-calendar text-danger"></i></span>
                                        <input asp-for="ExpiryDate" type="date" class="form-control border-start-0 ps-0" id="expiry" required />
                                    </div>
                                    <span asp-validation-for="ExpiryDate" class="text-danger fs-2"></span>
                                    <small class="text-muted">The survey will automatically close after this date.</small>
                                </div>
                            </div>

                            <div class="d-flex align-items-center justify-content-end gap-3 mt-4">
                                <a href="/Admin/fetchsurvays" class="btn btn-light px-4">Cancel</a>
                                <button type="submit" class="btn btn-primary px-5 shadow-sm">
                                    <i class="fa fa-check me-2"></i> Create Survey
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="py-6 text-center">
            <p class="mb-0 fs-4 text-muted">
                &copy; @DateTime.Now.Year Design and Developed by
                <a href="#" class="pe-1 text-primary text-decoration-underline fw-bold">
                    WAIZ WEB & AI SOLUTIONS
                </a>
            </p>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function() {
        $("#createsurvay").on("submit", function (e) {
            e.preventDefault();

            // Button loading state (Optional but professional)
            const btn = $(this).find('button[type="submit"]');
            btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Creating...');

            $.ajax({
                url: '/Admin/createsurvay',
                type: 'POST',
                data: {
                    title: $("#title").val(),
                    expiry: $("#expiry").val()
                },
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            title: "Success!",
                            text: response.success,
                            icon: "success",
                            confirmButtonColor: '#5d87ff'
                        }).then(() => {
                            window.location.href = '/Admin/fetchsurvays'; // Redirect after success
                        });
                        $("#createsurvay")[0].reset();
                    } else {
                        Swal.fire("Error", response.error, "error");
                    }
                },
                error: function () {
                    Swal.fire("Error", "Server error occurred", "error");
                },
                complete: function() {
                    btn.prop('disabled', false).html('<i class="fa fa-check me-2"></i> Create Survey');
                }
            });
        });
    });
</script>