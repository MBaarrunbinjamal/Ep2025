@model E_project2025.Models.SeminarViewModel

@{
    ViewData["Title"] = "Add Seminar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">
        <div class="card card-body py-3 shadow-none position-relative overflow-hidden mb-4">
            <div class="d-sm-flex align-items-center justify-content-between">
                <div>
                    <h4 class="fw-semibold mb-1">Add New Seminar</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a class="text-muted" href="/Admin/Index">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add Seminar</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10 col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="card-title mb-0 fw-bold text-primary">Seminar Information</h5>
                    </div>
                    <div class="card-body p-4">
                        <form id="seminarForm" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-semibold">Seminar Title</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fa fa-font text-primary"></i></span>
                                        <input type="text" class="form-control" placeholder="Enter title" id="title" required />
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-semibold">Event Date & Time</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fa fa-calendar text-info"></i></span>
                                        <input type="datetime-local" class="form-control" id="eventDate" required />
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-semibold">Venue / Location</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fa fa-map-marker text-danger"></i></span>
                                        <input type="text" class="form-control" placeholder="Enter venue" id="venue" required />
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-semibold">Seminar Poster (Image)</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fa fa-image text-info"></i></span>
                                        <input type="file" class="form-control" id="file" accept="image/*" />
                                    </div>
                                </div>

                                <div class="col-md-12 mb-4">
                                    <label class="form-label fw-semibold">Assign to Faculty/User</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fa fa-user text-warning"></i></span>
                                        <select asp-for="Seminar.UserId"
                                                asp-items="@(new SelectList(Model.Users, "Id", "FirstName"))"
                                                class="form-select" id="Users">
                                            <option value="">-- Select User --</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-12 mb-4">
                                    <label class="form-label fw-semibold">Seminar Description</label>
                                    <textarea class="form-control" rows="4" placeholder="Briefly describe the seminar..." id="description"></textarea>
                                </div>
                            </div>

                            <div class="d-flex align-items-center justify-content-end gap-3 mt-3 border-top pt-4">
                                <button type="reset" class="btn btn-light px-4">Clear Form</button>
                                <button type="button" id="submitBtn" class="btn btn-primary px-5 shadow-sm">
                                    <i class="fa fa-plus-circle me-2"></i> Create Seminar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $("#submitBtn").click(function () {
        // FormData Object for Image and Fields
        var formData = new FormData();
        
        // Pick values from IDs
        var title = $("#title").val();
        var venue = $("#venue").val();
        var eventDate = $("#eventDate").val(); // Picked Date
        var userId = $("#Users").val();
        var desc = $("#description").val();
        var fileInput = $("#file")[0].files[0];

        // Validation
        if (!title || !eventDate || !venue) {
            Swal.fire("Wait!", "Bhai, Title, Date aur Venue lazmi bharein.", "warning");
            return;
        }

        // Append to FormData
        formData.append("title", title);
formData.append("venue", venue);
formData.append("eventDate", eventDate); 
formData.append("UserId", userId); // Key name matches Controller parameter "UserId"
formData.append("description", desc);
if (fileInput) {
    formData.append("file", fileInput); // Key name matches "file"
}

        // Loading state
        $(this).prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Creating...');

        $.ajax({
            url: '/Admin/AddSeminar',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                Swal.fire({
                    icon: 'success',
                    title: 'Zabardast!',
                    text: 'Seminar successfully add ho gaya hai.'
                });
                $("#seminarForm")[0].reset();
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Opps!',
                    text: 'Server pe kuch masla aa raha hai.'
                });
            },
            complete: function() {
                $("#submitBtn").prop('disabled', false).html('<i class="fa fa-plus-circle me-2"></i> Create Seminar');
            }
        });
    });
</script>