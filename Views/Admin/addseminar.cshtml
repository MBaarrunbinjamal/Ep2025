@model E_project2025.Models.SeminarViewModel

@{
    ViewData["Title"] = "Add Seminar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">
        <div class="card card-body py-3 shadow-none position-relative overflow-hidden mb-4">
            <div class="d-sm-flex align-items-center justify-content-between">
                <div>
                    <h4 class="fw-semibold mb-1">Add New Seminar</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a class="text-muted" href="/Admin/Index">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add Seminar</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10 col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="card-title mb-0 fw-bold text-primary">Seminar Information</h5>
                    </div>
                    <div class="card-body p-4">
                        <form id="seminarForm" asp-action="AddSeminar">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Seminar.title" class="form-label fw-semibold">Seminar Title</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fa fa-font text-primary"></i></span>
                                        <input asp-for="Seminar.title" class="form-control" placeholder="Enter title" required />
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label asp-for="Seminar.venue" class="form-label fw-semibold">Venue / Location</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fa fa-map-marker text-danger"></i></span>
                                        <input asp-for="Seminar.venue" class="form-control" placeholder="Enter venue" required />
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label asp-for="Seminar.image" class="form-label fw-semibold">Image URL</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fa fa-image text-info"></i></span>
                                        <input asp-for="Seminar.image" class="form-control" placeholder="https://example.com/image.jpg" />
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-semibold">Assign to User/Faculty</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fa fa-user text-warning"></i></span>
                                        <select asp-for="Seminar.UserId"
                                                class="form-select border-start-0"
                                                asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
                                            <option value="">-- Select User --</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-12 mb-4">
                                    <label asp-for="Seminar.description" class="form-label fw-semibold">Seminar Description</label>
                                    <textarea asp-for="Seminar.description" class="form-control" rows="4" placeholder="Briefly describe the seminar..."></textarea>
                                </div>
                            </div>

                            <div class="d-flex align-items-center justify-content-end gap-3 mt-3 border-top pt-4">
                                <button type="reset" class="btn btn-light px-4">Clear Form</button>
                                <button type="button" id="submitBtn" class="btn btn-primary px-5 shadow-sm">
                                    <i class="fa fa-plus-circle me-2"></i> Create Seminar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="py-6 text-center mt-4">
            <p class="mb-0 fs-4 text-muted">
                &copy; @DateTime.Now.Year Design and Developed by
                <a href="#" class="pe-1 text-primary text-decoration-underline fw-bold">
                    WAIZ WEB & AI SOLUTIONS
                </a>
            </p>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function() {
        $("#submitBtn").click(function () {
            var form = $("#seminarForm");
            var btn = $(this);

            // Basic Validation Check
            if(!form[0].checkValidity()){
                form[0].reportValidity();
                return;
            }

            // Loading state
            btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Creating...');

            $.ajax({
                url: form.attr("action"),
                type: "POST",
                data: form.serialize(),
                success: function (response) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Seminar added successfully',
                        confirmButtonColor: '#5d87ff'
                    });
                    form[0].reset();
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'Something went wrong on the server',
                    });
                },
                complete: function() {
                    btn.prop('disabled', false).html('<i class="fa fa-plus-circle me-2"></i> Create Seminar');
                }
            });
        });
    });
</script>