
@model IEnumerable<E_project2025.Models.Survay>


@{
    ViewData["Title"] = "Surveys List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}
<style>
    /* Custom animation */
    .modal.fade .modal-dialog {
        transform: scale(0.8);
        transition: transform 0.3s ease-out;
    }

    .modal.show .modal-dialog {
        transform: scale(1);
    }

    /* Modal styling */
    .modal-header {
        background: linear-gradient(135deg, #0d6efd, #0a58ca);
        color: white;
    }

    .modal-title {
        font-weight: 600;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #0d6efd;
    }
</style>
<div class="body-wrapper">
    <div class="container-fluid">
        <div class="card card-body py-3 shadow-none position-relative overflow-hidden mb-4">
            <div class="d-sm-flex align-items-center justify-content-between">
                <div>
                    <h4 class="fw-semibold mb-1">Surveys Management</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a class="text-muted" href="/Admin/Index">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Fetch Surveys</li>
                        </ol>
                    </nav>
                </div>
                <div class="mt-3 mt-sm-0">
                    <a asp-action="uploadsurway" class="btn btn-primary d-flex align-items-center gap-2">
                        <i class="fa fa-plus fs-4"></i> Create New Survey
                    </a>
                </div>
            </div>
        </div>

        <div class="card w-100">
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-nowrap mb-0">
                        <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@Html.DisplayNameFor(model => model.Title)</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@Html.DisplayNameFor(model => model.UploadedOn)</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@Html.DisplayNameFor(model => model.ExpiryDate)</h6>
                                </th>
                                <th class="border-bottom-0 text-center">
                                    <h6 class="fw-semibold mb-0">Operations</h6>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">No surveys found.</td>
                                </tr>
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal">@item.Title</p>
                                    </td>
                                    <td class="border-bottom-0">
                                        <span class="badge bg-light-primary text-primary fw-semibold">
                                            @item.UploadedOn.ToString("dd MMM, yyyy")
                                        </span>
                                    </td>
                                    <td class="border-bottom-0">
                                        <span class="badge bg-light-danger text-danger fw-semibold">
                                            @item.ExpiryDate.ToString("dd MMM, yyyy")
                                        </span>
                                    </td>
                                    <td class="border-bottom-0 text-center">
                                        <div class="d-flex align-items-center justify-content-center gap-2">
                                            <!-- Launch Button -->
                                            <button class="btn btn-sm btn-outline-info" "
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#bigFormModal">
                                             

                                              Add Questions
                                                <i class="fa fa-question" aria-hidden="true"></i>
                                            </button>

                                            <!-- Modal -->
                                            <div class="modal fade" id="bigFormModal" tabindex="-1" aria-hidden="true">
                                                <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                                                    <div class="modal-content shadow-lg rounded-4">

                                                        <!-- Modal Header -->
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Survey / Form</h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                        </div>

                                                        <!-- Modal Body -->
                                                        <div class="modal-body">
                                                            @using System.Security.Claims

                                                        <form id="CreateBulk">

                                                                <!-- Logged-in User -->
                                                                <input type="hidden" id="userId"
                                                                       value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />

                                                                <!-- Survay / Parent Id -->
                                                                <input type="hidden" id="survayId" value="@item.Id" />

                                                                <div id="hospitalList">

                                                                    <!-- Default Row -->
                                                                    <div class="form-group mb-3 hospital-row">
                                                                        <label>Question</label>
                                                                        <div class="d-flex">
                                                                            <input class="form-control me-2 hospital-input" />
                                                                            <button type="button" class="btn btn-danger removeRow">X</button>
                                                                        </div>
                                                                    </div>

                                                                </div>

                                                                <button type="button" class="btn btn-success mb-3" id="addRow">
                                                                    + Add Another Question
                                                                </button>

                                                                <div class="form-group">
                                                                    <button type="button" id="submitBulk" class="btn btn-primary">
                                                                        Submit All
                                                                    </button>
                                                                </div>

                                                            </form>

                                                        </div>

                                                        <!-- Modal Footer -->
                                                        <div class="modal-footer">
                                                            <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                            <button class="btn btn-primary">Submit</button>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>

                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete Survey" onclick="return confirm('Bhai, are you sure you want to delete this?')">
                                                <i class="fa fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
     
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script>
            $("#addRow").click(function () {
                $("#hospitalList").append(`
                    <div class="form-group mb-3 hospital-row">
                        <label>Question</label>
                        <div class="d-flex">
                            <input class="form-control me-2 hospital-input" />
                            <button type="button" class="btn btn-danger removeRow">X</button>
                        </div>
                    </div>
                `);
            });

            $(document).on("click", ".removeRow", function () {
                $(this).closest(".hospital-row").remove();
            });

            $("#submitBulk").click(function () {

                let questions = [];

                $(".hospital-input").each(function () {
                    let val = $(this).val().trim();
                    if (val !== "") {
                        questions.push(val);
                    }
                });

                if (questions.length === 0) {
                    Swal.fire("Error", "Please add at least one question", "error");
                    return;
                }

                $.ajax({
                    url: '/Admin/CreateBulk',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        questions: questions,
                        survayId: $("#survayId").val()
                    }),
                    success: function (res) {
                        Swal.fire("Success", res.message, "success");

                        $("#hospitalList").html(""); // reset
                    },
                    error: function () {
                        Swal.fire("Error", "Something went wrong", "error");
                    }
                });
            });
        </script>
