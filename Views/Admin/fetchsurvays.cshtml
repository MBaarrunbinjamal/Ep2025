@model IEnumerable<E_project2025.Models.Survay>

@{
    ViewData["Title"] = "Surveys List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">
        <div class="card card-body py-3 shadow-none position-relative overflow-hidden mb-4">
            <div class="d-sm-flex align-items-center justify-content-between">
                <div>
                    <h4 class="fw-semibold mb-1">Surveys Management</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a class="text-muted" href="/Admin/Index">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Fetch Surveys</li>
                        </ol>
                    </nav>
                </div>
                <div class="mt-3 mt-sm-0">
                    <a asp-action="uploadsurway" class="btn btn-primary d-flex align-items-center gap-2">
                        <i class="fa fa-plus fs-4"></i> Create New Survey
                    </a>
                </div>
            </div>
        </div>

        <div class="card w-100">
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-nowrap mb-0">
                        <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@Html.DisplayNameFor(model => model.Title)</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@Html.DisplayNameFor(model => model.UploadedOn)</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">@Html.DisplayNameFor(model => model.ExpiryDate)</h6>
                                </th>
                                <th class="border-bottom-0 text-center">
                                    <h6 class="fw-semibold mb-0">Operations</h6>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">No surveys found.</td>
                                </tr>
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal">@item.Title</p>
                                    </td>
                                    <td class="border-bottom-0">
                                        <span class="badge bg-light-primary text-primary fw-semibold">
                                            @item.UploadedOn.ToString("dd MMM, yyyy")
                                        </span>
                                    </td>
                                    <td class="border-bottom-0">
                                        <span class="badge bg-light-danger text-danger fw-semibold">
                                            @item.ExpiryDate.ToString("dd MMM, yyyy")
                                        </span>
                                    </td>
                                    <td class="border-bottom-0 text-center">
                                        <div class="d-flex align-items-center justify-content-center gap-2">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Edit Survey">
                                                <i class="fa fa-pencil"></i> Add Questions
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete Survey" onclick="return confirm('Bhai, are you sure you want to delete this?')">
                                                <i class="fa fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

       