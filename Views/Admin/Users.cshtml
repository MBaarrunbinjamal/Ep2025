@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    @model List<E_project2025.Areas.Identity.Data.E_project2025User>
}

<div class="body-wrapper">
    <div class="container-fluid">
        <div class="card card-body py-3">
            <div class="d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-4 mb-sm-0 card-title fw-semibold">User Management</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Users List</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="card">
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-nowrap mb-0">
                        <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Username</h6></th>
                                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Email</h6></th>
                                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Status</h6></th>
                                <th class="border-bottom-0 text-center"><h6 class="fw-semibold mb-0">Role</h6></th>
                                <th class="border-bottom-0 text-center"><h6 class="fw-semibold mb-0">Action</h6></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td class="border-bottom-0">@user.FirstName</td>
                                    <td class="border-bottom-0">@user.Email</td>
                                    <td class="border-bottom-0">
                                        @if (user.isApproved)
                                        {
                                            <span class="badge bg-light-success text-success fw-semibold">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light-warning text-warning fw-semibold">Pending</span>
                                        }
                                    </td>
                                    <td class="border-bottom-0 text-center">
                                        <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modal-@user.Id">
                                            Change Role
                                        </button>

                                        <div class="modal fade" id="modal-@user.Id" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered modal-sm">
                                                <div class="modal-content text-start">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Update Role</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <input type="hidden" class="user-id-hidden" value="@user.Id" />
                                                        <div class="form-check mb-2">
                                                            <input class="form-check-input" type="radio" name="role-@user.Id" value="Admin" id="admin-@user.Id">
                                                            <label class="form-check-label" for="admin-@user.Id">Admin</label>
                                                        </div>
                                                        <div class="form-check mb-2">
                                                            <input class="form-check-input" type="radio" name="role-@user.Id" value="Faculty" id="faculty-@user.Id">
                                                            <label class="form-check-label" for="faculty-@user.Id">Faculty</label>
                                                        </div>
                                                        <div class="form-check mb-2">
                                                            <input class="form-check-input" type="radio" name="role-@user.Id" value="User" id="user-@user.Id">
                                                            <label class="form-check-label" for="user-@user.Id">User</label>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-primary w-100 btn-save-role" data-userid="@user.Id">Save changes</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="border-bottom-0 text-center">
                                        <button type="button" class="btn btn-success btn-sm btn-approve" data-userid="@user.Id">
                                            Approve
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="py-6 text-center">
            <p class="mb-0 fs-4">
                &copy; @DateTime.Now.Year Design and Developed by
                <a href="#" class="pe-1 text-primary text-decoration-underline fw-bold">
                    WAIZ WEB & AI SOLUTIONS
                </a>
            </p>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {
        $('.btn-save-role').click(function () {
            var userId = $(this).data('userid');
            var role = $('input[name="role-' + userId + '"]:checked').val();

            if (!role) {
                Swal.fire({ icon: 'warning', title: 'Wait!', text: 'Select a role first' });
                return;
            }

            $.ajax({
                url: '/Admin/ChangeUserRole',
                type: 'POST',
                data: { userId: userId, role: role },
                success: function (response) {
                    Swal.fire({ icon: 'success', title: 'Done', text: response.message }).then(() => location.reload());
                }
            });
        });

        $('.btn-approve').click(function () {
            var userId = $(this).data('userid');
            $.ajax({
                url: '/Admin/Approve',
                type: 'POST',
                data: { userid: userId },
                success: function (response) {
                    Swal.fire({ icon: 'success', title: 'Approved', text: response.message }).then(() => location.reload());
                }
            });
        });
    });
</script>