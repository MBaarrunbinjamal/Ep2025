@model IEnumerable<E_project2025.Models.SeminarRegistration>

@{
    ViewData["Title"] = "Seminar Registrations";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">
        <div class="card card-body py-3 shadow-none position-relative overflow-hidden mb-4">
            <div class="d-sm-flex align-items-center justify-content-between">
                <div>
                    <h4 class="fw-semibold mb-1">Seminar Registrations</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a class="text-muted" href="/Admin/Index">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Registrations List</li>
                        </ol>
                    </nav>
                </div>
                <div class="mt-3 mt-sm-0">
                    <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2">
                        <i class="ti ti-plus fs-4"></i> New Registration
                    </a>
                </div>
            </div>
        </div>

        <div class="card w-100">
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-nowrap mb-0">
                        <thead class="text-dark fs-4 bg-light">
                            <tr>
                                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Seminar Title</h6></th>
                                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Attendee Name</h6></th>
                                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Email Address</h6></th>
                                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Reg. Date</h6></th>
                                <th class="border-bottom-0 text-center"><h6 class="fw-semibold mb-0">Actions</h6></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">No registrations found yet.</td>
                                </tr>
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 text-primary">@item.seminar.Title</h6>
                                    </td>
                                    <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal">@item.users.FirstName</p>
                                    </td>
                                    <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal text-muted">@item.users.Email</p>
                                    </td>
                                    <td class="border-bottom-0">
                                        <span class="badge bg-light-success text-success fw-semibold">
                                            @item.RegisteredOn.ToString("dd MMM, yyyy")
                                        </span>
                                    </td>
                                    <td class="border-bottom-0 text-center">
                                        <div class="dropdown dropstart">
                                            <a href="#" class="text-muted" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="ti ti-dots-vertical fs-6"></i>
                                            </a>
                                            <ul class="dropdown-menu shadow-sm" aria-labelledby="dropdownMenuButton">
                                                <li>
                                                    <a class="dropdown-item d-flex align-items-center gap-2" asp-action="Edit" asp-route-id="@item.Id">
                                                        <i class="ti ti-edit fs-4 text-warning"></i> Edit
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item d-flex align-items-center gap-2 text-danger" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Bhai, delete kar dain?')">
                                                        <i class="ti ti-trash fs-4"></i> Delete
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="py-6 text-center">
            <p class="mb-0 fs-4 text-muted">
                &copy; @DateTime.Now.Year EcoPulse Management System
            </p>
        </div>
    </div>
</div>