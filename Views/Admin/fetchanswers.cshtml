@model IEnumerable<E_project2025.Models.Answers>
@{
    ViewData["Title"] = "Survey Answers";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">
        <div class="card card-body py-3 shadow-none position-relative overflow-hidden mb-4">
            <div class="d-sm-flex align-items-center justify-content-between">
                <div>
                    <h4 class="fw-semibold mb-1">Survey Responses</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a class="text-muted" href="/Admin/Index">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Fetch Answers</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h5 class="card-title fw-semibold mb-0">All User Answers</h5>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle text-nowrap mb-0">
                        <thead class="text-dark fs-4 bg-light">
                            <tr>
                                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">ID</h6></th>
                                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Survey</h6></th>
                                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Question</h6></th>
                                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Answer</h6></th>
                                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">User</h6></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">Bhai, abhi tak koi answers nahi mile.</td>
                                </tr>
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="border-bottom-0">
                                        <span class="fw-bold">#@item.Id</span>
                                    </td>
                                    <td class="border-bottom-0">
                                    <td class="border-bottom-0">
                                        <div class="d-flex align-items-center">
                                            <div class="ms-0">
                                                <h6 class="fw-semibold mb-0 fs-3 text-primary">@item.survey.Title</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal" style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;">
                                            @item.questions.QuestionText
                                        </p>
                                    </td>
                                    <td class="border-bottom-0">
                                        <span class="badge bg-light-info text-info fw-semibold fs-2">
                                            @item.Answertoquestion
                                        </span>
                                    </td>
                                    <td class="border-bottom-0">
                                        <div class="d-flex align-items-center gap-2">
                                            <i class="ti ti-user fs-4 text-muted"></i>
                                            <p class="mb-0 fw-normal">@item.users.UserName</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>